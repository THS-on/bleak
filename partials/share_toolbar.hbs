<div class="share-toolbar">
  <span class="prompt">Share &gt;</span>
  <a class="share-item twitter" target="_blank" href="https://twitter.com/intent/tweet?text={{meta_title}}&url={{url absolute="true"}}&hashtags={{#foreach tags}}{{name}},{{/foreach}}">
    <i class="fa fa-twitter"></i><span class="action">Tweet</span>
  </a>
</div>

<script>
function appendTwitterUsernameToSharing() {
  var sharer = $('.share-item.twitter');
  if (window._bleak.twitterUsername && sharer.attr('href').indexOf('&via=') === -1) {
    sharer.attr('href', sharer.attr('href') + '&via=' + window._bleak.twitterUsername);
  }
}
$(appendTwitterUsernameToSharing);
</script>
